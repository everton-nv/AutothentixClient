<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ufrpe.autothentixclient.usuario.gui.CreateDocServicoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_card"
            android:layout_marginStart="@dimen/margin_start_card"
            android:layout_marginTop="@dimen/margin_top_card"
            app:cardCornerRadius="@dimen/card_border"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextDocNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextDocNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_nomeDoc"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start"
                    android:layout_marginTop="@dimen/edit_text_margin_top"
                    android:text="@string/lbl_contractor_data"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_thickness"
                    android:layout_marginTop="@dimen/divider_horizontal_margin_top_legend"
                    android:layout_marginBottom="@dimen/divider_horizontal_margin_bottom"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratanteNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratanteNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/edt_contratante_nome"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratanteNacionalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratanteNacionalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratante_nacionalidade"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratanteRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratanteRG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratante_rg"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratanteCPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratanteCPF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratante_cpf"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start"
                    android:layout_marginTop="@dimen/edit_text_margin_top"
                    android:text="@string/lbl_hired_data"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_thickness"
                    android:layout_marginTop="@dimen/divider_horizontal_margin_top_legend"
                    android:layout_marginBottom="@dimen/divider_horizontal_margin_bottom"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaNomeEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaNomeEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_nome_empresa"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaCNPJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaCNPJ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_cnpj"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_nome"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaNacionalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaNacionalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_nacionalidade"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaProfissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaProfissao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_profissao"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextContratadaCPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextContratadaCPF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_contratada_cpf"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start"
                    android:layout_marginTop="@dimen/edit_text_margin_top"
                    android:text="@string/lbl_values"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_thickness"
                    android:layout_marginTop="@dimen/divider_horizontal_margin_top_legend"
                    android:layout_marginBottom="@dimen/divider_horizontal_margin_bottom"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_valor"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextValorExtenso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextValorExtenso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_valor_extenso"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start"
                    android:layout_marginTop="@dimen/edit_text_margin_top"
                    android:text="@string/lbl_local"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_thickness"
                    android:layout_marginTop="@dimen/divider_horizontal_margin_top_legend"
                    android:layout_marginBottom="@dimen/divider_horizontal_margin_bottom"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextCidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextCidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_cidade"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_estado"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutTextDataAtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:layout_marginEnd="@dimen/edit_text_margin_end"
                    android:layout_marginStart="@dimen/edit_text_margin_start">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextDataAtual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_data_atual"
                        android:inputType="date" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_thickness"
                        android:layout_gravity="center"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onClickCancel"
                            android:text="@string/btn_cancelar"
                            android:textColor="@color/colorBtnRed" />

                        <View
                            android:layout_width="@dimen/divider_thickness"
                            android:layout_height="match_parent"
                            android:background="@color/divider" />

                        <Button
                            android:id="@+id/btnRegister"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onClickCreateDoc"
                            android:text="@string/btn_criar"
                            android:textColor="@color/colorBtnBlue" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

    <include
        layout="@layout/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>
