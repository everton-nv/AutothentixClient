<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start_card"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/lblDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Paciente:"
            android:textColor="#6e6e6e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lblDoctor"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:hint="Nome do Paciente"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDoctor"
            android:layout_alignParentStart="true"
            android:text="Data:"
            android:textColor="#6e6e6e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDoctor"
            android:layout_toEndOf="@+id/lblDate"
            android:hint="01/01/2018"
            android:layout_marginStart="4dp"
            android:textColor="#101010"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDoctor"
            android:layout_toEndOf="@+id/txtDate"
            android:layout_marginStart="8dp"
            android:text="Status:"
            android:textColor="#6e6e6e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDoctor"
            android:layout_toEndOf="@+id/lblStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:hint="Marcada"
            android:textColor="#6e6e6e"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDate"
            android:layout_alignParentStart="true"
            android:text="Horário:"
            android:textColor="#6e6e6e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDate"
            android:layout_toEndOf="@+id/lblSchedule"
            android:hint="Manhã"
            android:layout_marginStart="4dp"
            android:textColor="#101010"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
