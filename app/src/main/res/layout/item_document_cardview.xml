<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_card_recycleview"
    android:layout_marginStart="@dimen/margin_start_card_recycleview"
    android:layout_marginEnd="@dimen/margin_end_card_recycleview"
    android:layout_marginBottom="@dimen/margin_bottom_card_recycleview"
    app:cardElevation="@dimen/card_elevation_recycleview"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/card_corner_radius_recycleview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_start_card"
        android:background="?android:attr/selectableItemBackground"
        tools:ignore="RtlSymmetry">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_vertical_imageview"
            android:layout_marginBottom="@dimen/margin_vertical_imageview"
            app:srcCompat="@drawable/ic_file"
            android:contentDescription="@string/content_description_doc_icon"
            android:tint="@color/colorPrimary"
            android:backgroundTintMode="src_atop"/>

        <TextView
            android:id="@+id/lblNomeDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_card_recycleview"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_centerVertical="true"
            android:text="@string/lbl_doc"
            android:textColor="@color/color_text_value_in_list"
            android:textSize="@dimen/text_size_card_recycleview" />

        <TextView
            android:id="@+id/txtNomeDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_card_recycleview"
            android:layout_marginEnd="@dimen/margin_end_text_card_recycleview"
            android:layout_toStartOf="@id/iv_context_menu"
            android:layout_toEndOf="@+id/lblNomeDoc"
            android:layout_centerVertical="true"
            android:hint="@string/exemple_doc_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_text_label_in_list"
            android:textSize="@dimen/text_size_card_recycleview" />

        <ImageView
            android:id="@+id/iv_context_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ic_context_menu"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/content_description_option_icon"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorPrimary"
            android:backgroundTintMode="src_atop" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
